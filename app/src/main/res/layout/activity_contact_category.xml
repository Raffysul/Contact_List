<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageLogo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/teal_700"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_people_alt_24" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"android:paddingTop="30dp"
            android:drawableLeft="@drawable/ic_baseline_people_alt_24"
            android:layout_below="@id/imageLogo"

            android:text="@string/friends"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintEnd_toEndOf="@id/imageLogo"
            app:layout_constraintStart_toStartOf="@id/imageLogo"
            app:layout_constraintTop_toBottomOf="@id/imageLogo" />



    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>